<div class="show-content">
	<h1 class="title">
		<%= @post.title %> 
	</h1>

	<p class="edit-link"><%= link_to 'edit', edit_post_path(@post) %></p> | <p class="delete-link"><%= link_to 'destroy', post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete it?" } %></p>
	
	<p class="date">
		Submitted: <%= time_ago_in_words(@post.created_at) %> Ago 
	</p>

	<p class="body">
		<%= @post.body %> 
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>
	</div>
	
	<div id="new-comment-form">
		<h3>Add a comment:</h3>
		<%= render "comments/form" %>
	</div>
</div>